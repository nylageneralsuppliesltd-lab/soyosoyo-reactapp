# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"
DIRECT_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# Audit database
AUDIT_DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# Email configuration - Postmark
EMAIL_PROVIDER=postmark

# Delivery mode:
# - postmark-smtp : SMTP only
# - postmark-api  : API only
# - hybrid        : API first (if token exists), then SMTP, with safe fallback rules
EMAIL_DELIVERY_MODE=hybrid

EMAIL_SMTP_HOST=smtp.postmarkapp.com
EMAIL_SMTP_PORT=587

# SMTP token credentials (Postmark SMTP Access Key + Secret Key)
EMAIL_SMTP_USER=PM-T-outbound-xxxxxxxxxxxxxxxx
EMAIL_SMTP_PASS=p-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Postmark Server API token (used by API path/fallback)
POSTMARK_SERVER_TOKEN=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Verified sender/signature
EMAIL_FROM=info@yourdomain.com

# Message stream (defaults to outbound if omitted)
EMAIL_SMTP_HEADER_X_PM_MESSAGE_STREAM=outbound

# Optional mail retry tuning
EMAIL_MAX_ATTEMPTS=3
EMAIL_RETRY_BASE_MS=1200

# Auth/security basics (set real values in your private .env)
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=1d
PORT=3000
